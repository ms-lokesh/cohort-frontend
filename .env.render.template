# Environment Variables Template for Render + Supabase Deployment
# Copy this file and fill in your actual values
# DO NOT commit this file with real values to git

# ============================================
# DJANGO CORE SETTINGS
# ============================================
PYTHON_VERSION=3.13.0
NODE_VERSION=20.11.0
DJANGO_SETTINGS_MODULE=config.settings
DEBUG=False

# ============================================
# SECRET KEYS (Generate using Render's "Generate" button)
# ============================================
SECRET_KEY=your-django-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# ============================================
# ALLOWED HOSTS & CORS
# ============================================
# Update with your actual Render URL after deployment
ALLOWED_HOSTS=cohort-web-app.onrender.com,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://cohort-web-app.onrender.com

# ============================================
# SUPABASE DATABASE CONNECTION
# ============================================
# Get from Supabase: Settings > Database > Connection string (URI mode)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# ============================================
# SUPABASE API CONFIGURATION
# ============================================
# Get from Supabase: Settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ALGORITHM=HS256

# ============================================
# STATIC & MEDIA FILES
# ============================================
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ============================================
# GUNICORN CONFIGURATION
# ============================================
WEB_CONCURRENCY=2
GUNICORN_TIMEOUT=120

# ============================================
# RENDER SPECIFIC
# ============================================
PORT=8000
RENDER=true

# ============================================
# OPTIONAL: REDIS CACHE (if using Redis)
# ============================================
# REDIS_URL=redis://your-redis-instance:6379/0

# ============================================
# OPTIONAL: SENTRY ERROR TRACKING
# ============================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# OPTIONAL: AWS S3 FOR MEDIA FILES
# ============================================
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ============================================
# APPLICATION SPECIFIC SETTINGS
# ============================================
# Add any application-specific environment variables here
MAX_FILE_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
